<div class="container">
  <div class="well col-md-4 col-md-offset-4" >
    <h3>Sign into gCamp</h3>
    <%= form_tag signin_path do |f| %>
      <% if @sign_in_error %>
        <p>
          <%= @sign_in_error %>
        </p>
      <% end %>
      <div class="form-group">
        <div>
          <%= label_tag :email %>
        </div>
        <div>
          <%= email_field_tag :email %>
        </div>
      </div>
      <div class="form-group">
        <div>
          <%= label_tag :password %>
        </div>
        <div>
          <%= password_field_tag :password %>
        </div>
      </div>
      <div class="form-group">
        <div>
          <%= submit_tag "Sign in", :class => "btn-primary"%>
        </div>
      </div>
    <% end %>
  </div>
</div>
