  <div class="container">
    <div class="page-header">
      <div class="pull-right text-muted">
        <%= link_to_if((@ref == "incomplete"), "All", tasks_path(sort: "all")) %> |
        <%= link_to_if((@ref == "all"), "Incomplete", tasks_path(sort: "incomplete")) %>&nbsp;&nbsp;&nbsp;
        <%= link_to 'New Task', new_task_path, class: "btn btn-primary" %>
      </div>
      <h1>Tasks</h1>
    </div>

    <table class="table">
      <thead>
        <tr>
          <th width="50%">Description</th>
          <th width="15%">Complete</th>
          <th width="15%">Due</th>
          <th width="20%"></th>
        </tr>
      </thead>

      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.description %></td>
            <td><%= task.complete %></td>
            <td><%= task.due_date %></td>
            <td>
              <div class="pull-right">
                <%= link_to 'Show', task, class: "btn btn-success" %>&nbsp;&nbsp;
                <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %>&nbsp;&nbsp;
                <%= link_to 'Destroy', task, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <br>
