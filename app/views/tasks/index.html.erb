  <div class="container">
    <h1 class="page-header">
      Tasks
      <%= link_to 'New Task', new_task_path, class: "btn btn-primary pull-right" %>
    </h1>

    <table class="table">
      <thead>
        <tr>
          <th>Description</th>
          <th>Complete</th>
          <th>Due</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.description %></td>
            <td><%= task.complete %></td>
            <td><%= task.due_date %></td>
            <td>
              <div class="pull-right">
                <%= link_to 'Show', task, class: "btn btn-success" %>&nbsp;&nbsp;
                <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %>&nbsp;&nbsp;
                <%= link_to 'Destroy', task, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <br>
