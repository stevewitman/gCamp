
  <h1 class="page-header">
    Tasks
    <%= link_to 'New Task', new_task_path, class: "btn btn-primary pull-right" %>
  </h1>


<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= link_to 'Show', task, class: "btn btn-success pull-right" %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-info pull-right" %></td>
        <td><%= link_to 'Destroy', task, class: "btn btn-danger pull-right", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
