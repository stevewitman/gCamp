<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="container">
  <div class="jumbotron">
    <div class="container">
      <h1>gCamp</h1>
      <p>Your life organized</p>
    </div>
  </div>
</div>

<div class="container">
  <!-- Example row of columns -->
  <div class="row">
    <div class="col-md-4">
      <%= image_tag "image1.jpg", :class =>"pics" %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Tasks</h3>
        </div>
        <div class="panel-body">
          <p>Grouped by projects and lists. Just the way you like 'em. </p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <%= image_tag "image2.jpg", :class=>"pics" %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Documents</h3>
        </div>
        <div class="panel-body">
          <p>
            <ul>
              <li>Upload</li>
              <li>Comment</li>
              <li>Revise</li>
            </ul>
          </p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <%= image_tag "image3.jpg", :class=>"pics" %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Comments</h3>
        </div>
        <div class="panel-body">
          <p>
            <ul>
              <li>Comment on tasks and documents</li>
              <li>Get email notifications</li>
            </ul>
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <!-- Quotes -->
    <% @quotes.each do |quote| %>
     <p>"<%= quote.text %>" - <%= quote.author %></p>
    <% end %>

  </div>


</div>
